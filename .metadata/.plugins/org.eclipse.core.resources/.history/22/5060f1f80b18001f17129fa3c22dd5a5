<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.morning.per.basketMapper">

	<!-- -->
	<sql id="basketCol">
		bno, title, content, author, vcnt, resdate
	</sql>
	<select id="getBasketList" resultType="com.coffee.dto.Basket">
		select * from basket order
		by resdate desc
	</select>
	<select id="getBasket" resultType="com.coffee.dto.Basket">
		select * from basket where
		bno=#{bno, javaType=int, jdbcType=INTEGER}
	</select>
	
	<select id="vcntCount" resultType="int">
		select bno from (select * from
		basket order by bno desc) where rownum=1
	</select>
	<insert id="insbasket" parameterType="com.coffee.dto.basket">
		insert into basket values
		(#{bno}, #{title}, #{content}, #{author}, default, default)
	</insert>
	
	<update id="upbasket">
		update basket set title=#{title}, content= #{content}
		where bno=#{bno}
	</update>
	
	
	<delete id="delbasket">
		delete from basket where bno=#{bno}
	</delete>

</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.coffee.dao.FileboardMapper">

	<!-- -->
	<sql id="fileboardCol">
		no, title, content, url, hits, resdate, member
	</sql>
	<select id="getFileboardList" resultType="com.coffee.dto.Fileboard">
		select * from Fileboard order
		by resdate desc
	</select>
	<select id="getFileboard" resultType="com.coffee.dto.Fileboard">
		select * from Fileboard where
		no=#{no, javaType=int, jdbcType=INTEGER}
	</select>
	
	<select id="vcntCount" resultType="int">
		select no from (select * from
		Fileboard order by no desc) where rownum=1
	</select>
	<insert id="insFileboard" parameterType="com.coffee.dto.Fileboard">
		insert into Fileboard values
		(#{no}, #{title}, #{content}, #{url}, #{hits}, default, #{author})
	</insert>
	
	<update id="upFileboard">
		update Fileboard set title=#{title}, content= #{content}
		where no=#{no}
	</update>
	
	
	<delete id="delFileboard">
		delete from Fileboard where no=#{no}
	</delete>

</mapper>
package com.coffee.dao;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import com.coffee.dto.Product;

@Repository
public class ProductDAO implements ProductMapper {

	@Autowired
	private SqlSession sqlSession;
	
	
	@Override
	public List<Product> getProductList() {
		return sqlSession.selectList("Product.getProductList");
	}

	@Override
	public Product getProduct(int bno) {
		return sqlSession.selectOne("Product.getProduct", bno);
	}

	

	@Override
	public void insProduct(Product product) {
		sqlSession.insert("Product.insProduct", product);
	}

	@Override
	public void upProduct(Product product) {
		sqlSession.update("Product.upProduct", product);
	}

	@Override
	public void delProduct(int bno) {
		sqlSession.delete("Product.delProduct", bno);		
	}


	
	@Override
	public int getTotalCount() {
		return sqlSession.selectOne("Product.getTotalCount");

	}

	@Override
	public void vcntCount(int bno) {
		sqlSession.update("Product.vcntCount", bno);
		
	}
}
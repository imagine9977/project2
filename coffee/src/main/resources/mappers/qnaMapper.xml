<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="qna">

	<!-- 총 질문 빛 답변 수 -->
	<select id="getTotalCount" resultType="int">
		select COUNT(*) from qna
	</select>

	<!-- has a 관계 설정 -->
	<resultMap type="qna" id="qnaRM">
		<result property="member.id" column="id"/>
		<result property="member.name" column="name"/>
	</resultMap>
	
	<select id="getLastQnaList" parameterType="pagingBean" resultMap="qnaRM">
		select * from qna order by parno desc, plevel asc limit 5
	</select>	
	
	<!-- 묻고 답하기 목록 조회 -->
	<select id="getQnaList" parameterType="pagingBean" resultMap="qnaRM">
		select * from qna order by parno desc, plevel asc
	</select>	
	
	<!-- 묻고 답하기 상세 보기 -->
	<select id="getQna" resultMap="qnaRM">
		select * from qna where no=?
	</select>
	
	<!-- 질문 글 등록 -->
	<insert id="insQues" parameterType="com.coffee.dto.Qna">
		insert into qna(plevel, parno, title, content, resdate, visited, aid) values(1,null,?,?,default,0,?)
		<!-- insert into qna(#{plevel}, #{parno}, #{title}, #{content}, resdate, #{visited}, #{aid}) values(2,?,?,?,default,0,?) -->
		<!-- insert into qna(#{plevel}, #{parno}, #{title}, #{content}, resdate, #{visited}, #{aid}) values(1,null,?,?,default,0,?)-->
	</insert>

	<!-- 질문 글에 대한 부모 글번호 변경 -->
	<update id="upParno">
			UPDATE qna JOIN (SELECT no FROM qna ORDER BY no DESC LIMIT 1) AS sub SET qna.parno = sub.no WHERE qna.no = sub.no
			
	</update>

	<!-- 답변 글 등록 -->
	<insert id="insAnsw" parameterType="com.coffee.dto.Qna">
		insert into qna(plevel, parno, title, content, resdate, visited, aid) values(2,?,?,?,default,0,?)
	</insert>
	
	<!-- 묻고 답하기 글 변경 -->
	<update id="editProQna" parameterType="com.coffee.dto.Qna">
		update qna set title=#{no}, content=#{no} where no=#{no}
	</update>

	<!-- 묻고 답하기 글 조회수 증가 -->
	<update id="hitCount">
		update qna set hits=hits+1 where no=#{no}
	</update>
	
	<!-- 묻고 답하기 글 삭제 -->
	<delete id="delQues">
		delete from qna where parno=#{no}
	</delete>
	<delete id="delAnsw">
		delete from qna where parno=#{no}
	</delete>
</mapper>